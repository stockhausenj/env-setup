# Java 21 Environment Configuration (macOS)
# Temurin JDK 21 installed via Homebrew

# Use /usr/libexec/java_home to dynamically find the latest Java 21
export JAVA_HOME=$(/usr/libexec/java_home -v 21)
export PATH="$JAVA_HOME/bin:$PATH"

# Maven settings (if using Maven)
export MAVEN_OPTS="-Xmx2048m -XX:MaxMetaspaceSize=512m"

# Gradle settings (if using Gradle)
export GRADLE_OPTS="-Xmx2048m -Dorg.gradle.daemon=true"
